{
    "Documentation": {
        "Swagger": {
            "Title": "Fwks App Service",
            "Description":  "API Service Swagger Documentation"
        }
    },
    "Persistence": {
        "Mongo": {
            "Database": "app_service",
            "Hosts": [ "localhost:27017" ],
            "Parameters": {
                "connectTimeoutMS": "15000",
                "appName": "appservice_api"
            },
            "Password": "local",
            "Username": "local"
        }
    },
    "Security": {
        "AuthServer": {
            "Authority": "https://authserver.com",
            "Audience": "https://authserver.com",
            "RequireHttpsMetadata": true,
            "Scopes": {
                "api.admin": "API Admin - Full Control "
            }
        },
        "Cors": {
            "Default": "DefaultPolicy",
            "Policies": [
                {
                    "ExposedHeaders": [],
                    "Headers": [],
                    "Methods": "GET,POST,PATCH,PUT,DELETE",
                    "Name": "DefaultPolicy",
                    "Origins": [
                        "http://localhost:4200"
                    ]
                }
            ]
        },
        "Obfuscation": {
            "Alphabet": "dC5lFfHe9Z72G0g6uNQMKPAp4bim_TRJc3EVLYqozXsnjvwIyx8r1SOBkDahWUt",
            "MinLength": 5,
            "Tokens": {
                "customers": 1
            }
        }
    },
    "Serilog": {
        "Enrich": [
            "FromLogContext",
            "WithMachineName",
            "WithEnvironmentName"
        ],
        "MinimumLevel": {
            "Default": "Debug",
            "Override": {
                "Microsoft": "Information",
                "Microsoft.EntityFramework": "Information",
                "System": "Information"
            }
        },
        "WriteTo": [
            { "Name": "Console" }
        ]
    },
    "Toggles": {
        "Swagger": true
    }
}
